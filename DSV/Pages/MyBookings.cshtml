@page
@model MyBookingsModel
@{
    ViewData["Title"] = "Mine Bookninger";
}

<h2>Mine bookninger</h2>

<table class="table">
    <thead>
        <tr>
            <th>Navn</th>
            <th>Dato</th>
            <th>Tid</th>
            <th></th> <!-- Ny kolonne til handlinger -->
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model.MyBookings)
        {
            <tr>
                <td>@booking.Name</td>
                <td>@booking.DateOnly</td>
                <td>@booking.TimeOnly</td>
                <td>
                    <a asp-page="/Edit" asp-route-id="@booking.ID" class="btn btn-primary">Rediger</a> <!-- Rediger-knap -->
                    <form method="post" asp-page-handler="Delete" asp-route-id="@booking.ID" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Slet</button> <!-- Slet-knap -->
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
