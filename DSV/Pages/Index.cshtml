@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h2>Mødelokaler</h2>

<table class="table">
    <thead>
        <tr>
            <th>Navn</th>
            <th>Kapacitet</th>
            <th>Status</th>
            <th>Handling</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model.MeetingRooms)
        {
            <tr>
                <td>@room.Name</td>
                <td>@room.Capacity personer</td>
                <td>@(room.IsAvailable ? "Ledig" : "Optaget")</td>
                <td>
                    @if (room.IsAvailable)
                    {
                        <a asp-page="/@room.Name" asp-for= asp-route-roomId="@room.ID">
                            <button class="btn btn-primary">Book @room.Name</button>
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-secondary" disabled>Optaget</button>
                    }
                </td>
                
            </tr>
        }
    </tbody>
</table>
